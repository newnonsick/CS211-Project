<AnchorPane prefHeight="800.0" prefWidth="1180.0" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs211.project.controllers.EventListController">
   <children>
      <VBox alignment="CENTER" layoutX="146.0" prefHeight="800.0" prefWidth="888.0">
         <children>
            <Pane prefHeight="37.0" prefWidth="888.0" />
            <Label text="Event List">
